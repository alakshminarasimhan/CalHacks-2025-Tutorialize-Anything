# AWS Cognito Configuration (Authentication)
NEXT_PUBLIC_AWS_COGNITO_USER_POOL_ID=your_cognito_user_pool_id_here
NEXT_PUBLIC_AWS_COGNITO_CLIENT_ID=your_cognito_app_client_id_here

# AWS DynamoDB Configuration (Storyboard Storage)
AWS_DYNAMODB_STORYBOARDS_TABLE=tutorialize-storyboards
AWS_DYNAMODB_USERS_TABLE=tutorialize-users

# AWS Credentials & Region
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-west-2

# AWS S3 Configuration (Media Storage)
AWS_S3_BUCKET=your_s3_bucket_name_here

# BrightData Configuration (MCP Server for Web Scraping)
# Get your API token from: https://brightdata.com
# Free tier: 5,000 requests/month for first 3 months
BRIGHTDATA_API_KEY=your_brightdata_api_token_here

# Anthropic Claude Configuration (AI Storyboard Generation)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini Configuration (Image Prompt Enhancement)
GEMINI_API_KEY=your_gemini_api_key_here

# Image Generation (Pollinations.ai - FREE, no API key needed!)
# No configuration needed - Pollinations.ai is free and requires no API key

# Fish.Audio TTS Configuration (Voice Narration)
FISHAUDIO_API_KEY=your_fishaudio_api_key_here

# Python Configuration (Agent Graph)
PYTHON_PATH=python3

# Supermemory Configuration (Knowledge Graph)
SUPERMEMORY_API_KEY=your_supermemory_api_key_here
